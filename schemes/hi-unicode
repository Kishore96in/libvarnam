consonants(combine get_consonants, ["*w", "*v"] => ["*#{$virama}व"])

generate_cv

consonants(combine get_consonants, ["*a"] => ["*"])

get_vowels.each do |vowel|
  if vowel.match_type == 1
     consonants ["m#{vowel.pattern}"] => ["म#{vowel.value2}"]
  else
     consonants [["m#{vowel.pattern}"]] => ["म#{vowel.value2}"]
  end
end
symbols ["m", ["n"]] => $am,
        [["n", "m"]] => $an

symbols({:priority => :low}, ["aan", "aam"] => $an)



